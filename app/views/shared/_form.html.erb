    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form_control user-form' %>

      <%= f.label :email, "ログインID" %>
      <%= f.text_field :email, class: 'form_control user-form' %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form_control user-form' %>

      <%= f.label :password_confirmation, "パスワード（確認）" %>
      <%= f.password_field :password_confirmation, class: 'form_control user-form' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>