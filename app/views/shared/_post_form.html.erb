<%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.text_field :title, placeholder: "投稿タイトル", class: "post-form" %>
        <%= f.text_area :content, placeholder: "投稿内容", class: "post-form" %>
    </div>
    <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>